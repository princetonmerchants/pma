.outset
  %table.index
    %thead
      %tr
        %th Logo
        %th Name
        %th Billing Contact
        %th Email
        %th Phone
        %th Status
        %th.actions Actions
      %tbody
        - @members.each do |m|
          %tr
            %td
              %img{:src => m.logo(:thumb)}
            %td= h(m.name)
            %td= h(m.billing_contact)
            %td= h(m.email || m.billing_email)
            %td= h(m.phone || m.billing_phone)
            %td= h(m.status)
            %td.actions
              = link_to image('page_edit') + ' Edit', edit_member_path(m.id)
              = link_to image('page_delete') + ' Delete', member_path(m.id), :method => :delete, :confirm => "Really delete #{m.name}?"
    %tfoot
      %tr
        %td{:colspan => 3}= page_entries_info @members, :entry_name => "result"
        %td{:colspan => 3}= will_paginate @members, :inner_window => 1, :outer_window => 1
        
#actions
  %ul
    %li
      = link_to image('plus') + ' New member', new_member_path