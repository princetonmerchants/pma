%fieldset
  %legend 
    Category
  %p
    %label{:for => "category_name"} Name:
    = f.text_field :name
    
%fieldset
  %legend 
    = "#{@category.members.count} Members"
  %ul
    - @category.members.each do |c|
      %li= link_to c.name, edit_member_path(c)
        
%p.buttons
  = f.submit submit_label
  or
  = link_to 'Cancel', categories_path