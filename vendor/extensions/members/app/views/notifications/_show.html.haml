%li 
  %a{:href => url_for(notification.notifiable), :class => (notification.seen? ? 'seen' : 'unseen')}     
    = image_tag(notification.from_member.logo(:thumb)) if notification.from_member.logo?
    %h5
      = notification
    %abbr.timeago{:title => notification.created_at.iso8601}
      = notification.created_at.strftime('%A, %B %d, %Y at %I:%m %p')