= render :partial => 'shared/parts_public'

- content_for :custom do

  = render :partial => 'shared/top'
  
  - form_for @member_session, :url => member_session_path do |f| 
    = f.error_messages :message => 'Login unsuccessful due to the following:', :header_message => nil
    %p
      = f.label :email
      %br
      = f.text_field :email
    %p
      = f.label :password
      %br
      = f.password_field :password
    %p
      = f.check_box :remember_me
      = f.label :remember_me
    %p.buttons
      = f.submit "Login"
      = link_to 'Forgot Your Password?', new_password_reset_path
    %p
      = link_to "Don't Have an Account?", new_member_path
      