= render :partial => 'shared/parts_mine'

- content_for :custom do

  = render :partial => 'shared/top'

  - form_for :member, :url => update_password_path, :html => { :method => :put }  do |f|
    = f.error_messages :header_message => nil, :message => "Please fix the following fields:", :header_tag => :h4  
    %p
      %label{:for => "member_password"} New Password
      %br
      = f.password_field :password
    
    %p
      %label{:for => "member_password_confirmation"} New Password Again
      %br
      = f.password_field :password_confirmation
    %p.buttons
      = f.submit 'Update'
      or
      = link_to 'Cancel', @member
