= render :partial => 'shared/wall_form'

= javascript_tag "member_id = #{@member.id}; page = 1; more_messages_exist = #{@more_messages_exist}"

%ol#messages.reset
  %li#message-loading{:style => 'display:none'}
    = image_tag 'ajax-loader.gif'
  - @messages.each do |message|
    = render :partial => 'messages/show', :locals => {:message => message}

- if @more_messages_exist
  #loading.more{:style => 'display:none'}
    = image_tag 'ajax-loader.gif'
  #more-messages.more
    %a{:href => '#'}
      Older Posts
