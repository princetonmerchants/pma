%li[message_response]

  - if message_response.member.logo.blank?
    .logo.missing
  - else
    .logo
      = link_to(image_tag(message_response.member.logo(:small_thumb)), members_only_profile_path(message_response.member))
      
  .inner-response
  
    %h6
      = link_to message_response.member.company_name, members_only_profile_path(message_response.member) 
    
    %small 
      %abbr{:title => message_response.created_at.strftime('%A, %B %d, %Y at %I:%m %p')}
        = time_ago_in_words(message_response.created_at)
        ago
      - if current_member == message_response.member
        = link_to_remote 'Remove', {:url => message_response_path(message_response), :method => :delete, :success => "$('#message_response_#{message_response.id}').fadeOut().remove()"}, :class => 'remove'
  
    .body.expandable
      = simple_format h(message_response.body)
