= render :partial => 'shared/parts_public'

= content_for :custom do

  = render :partial => 'shared/top'
  
  - form_for @member, :url => password_reset_path, :method => :put do |f|
    = f.error_messages :message => "Please fix the following fields:", :header_message => nil
        
    %p
      = f.label :password
      %br
      = f.password_field :password
      
    %p 
      = f.label :password_confirmation
      %br
      = f.password_field :password_confirmation
      
    %p.buttons
      = f.submit 'Update'