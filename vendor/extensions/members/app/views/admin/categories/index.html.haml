.outset
  %table.index
    %thead
      %tr
        %th Name
        %th Members
        %th.actions Actions
      %tbody
        - @categories.each do |c|
          %tr
            %td= h(c.name)
            %td= h(c.members.count)
            %td.actions
              = link_to image('page_edit') + ' Edit', edit_admin_category_path(c.id)
              = link_to image('page_delete') + ' Delete', admin_category_path(c.id), :method => :delete, :confirm => "Really delete #{c.name}?"
    %tfoot
      %tr
        %td{:colspan => 3}= page_entries_info @categories, :entry_name => "result"
        %td{:colspan => 3}= will_paginate @categories, :inner_window => 1, :outer_window => 1
        
#actions
  %ul
    %li
      = link_to image('plus') + ' New category', new_admin_category_path