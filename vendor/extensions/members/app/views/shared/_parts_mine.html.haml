- content_for :breadcrumbs do
  %a{:href => '/'}
    Home 
  &nbsp;&gt;&nbsp;
  = @title

- content_for :left do
  .block
    .inner
      - unless @member.logo(:small).blank?
        .logo
          = link_to(image_tag(@member.logo(:small)), @member)
      %h3
        = link_to @member.company_name, @member
      %p.info 
        = link_to 'Public Profile', @member  
        |
        = link_to 'Members-Only Profile', members_only_profile_path(@member) 
  - unless controller.action_name == 'show'
    #nav-sub.block
      %ul
        %li 
          = link_to 'News Feed', account_path
        %li 
          = link_to 'Notifications', notifications_path
        %li 
          = link_to 'Edit Account', edit_account_path
        %li 
          = link_to 'Change Password', change_password_path
        %li 
          %a{:href => '/membership/make-a-payment'} Make a Payment
  <r:snippet name="latest_news" />
  <r:snippet name="latest_resources" />

- content_for :right do
  <r:snippet name="help_us" />
  <r:snippet name="upcoming_events" />
  <r:snippet name="sharing" />
  <r:snippet name="facebook_embed_small" />
  